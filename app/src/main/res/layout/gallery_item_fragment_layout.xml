<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
      android:id="@+id/scaleView"
      android:visibility="gone"
      android:layout_width="match_parent"
      app:quickScaleEnabled="true"
      android:layout_height="match_parent"/>

  <com.github.chrisbanes.photoview.PhotoView
      android:id="@+id/photoView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

    <com.ww.commonlibrary.view.CircleProgressView
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        android:indeterminateDrawable="@drawable/progress_load"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cpv_innerPadding="1dp"
        app:cpv_outerColor="@color/white"
        app:cpv_outerSize="1dp"
        app:cpv_progressNormalColor="@color/transparent"
        app:cpv_progressReachColor="@color/white"
        app:cpv_progressStyle="FillInnerArc"/>

</RelativeLayout>